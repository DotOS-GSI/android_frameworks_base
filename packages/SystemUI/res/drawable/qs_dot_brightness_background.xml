<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:tint="@color/qs_background_dark" android:thickness="@dimen/brightness_mirror_height">
            <solid android:color="@color/default_qs_transparency" />
            <corners android:radius="@dimen/dotroundCorners" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:tint="?android:attr/colorAccent">
                <corners android:radius="@dimen/dotroundCorners" />
                <size android:height="@dimen/brightness_mirror_height" />
            </shape>
        </clip>
    </item>

</layer-list>